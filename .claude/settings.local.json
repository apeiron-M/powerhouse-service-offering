{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run tsc:*)",
      "Bash(npm run lint:*)",
      "mcp__reactor-mcp__getDrives",
      "mcp__reactor-mcp__getDrive",
      "mcp__reactor-mcp__getDocumentModels",
      "mcp__reactor-mcp__getDocuments",
      "mcp__reactor-mcp__getDocument",
      "mcp__reactor-mcp__addActions",
      "mcp__reactor-mcp__getDocumentModelSchema",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(bun x tsc:*)",
      "Bash(npm run lint:fix:*)",
      "Bash(npx eslint:*)"
    ],
    "deny": [
      "Write(./document-models/*/gen/**)",
      "Write(./.ph/**)",
      "Edit(./document-models/*/gen/**)",
      "Edit(./.ph/**)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "reactor-mcp"
  ]
}
